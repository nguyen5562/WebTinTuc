@model WebTinTuc.Models.ChuDe
@{
    ViewData["Title"] = "Tạo chủ đề mới";
}

<div class="min-vh-100 py-4" style="background: linear-gradient(135deg, var(--gray-50), var(--white));">
    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <!-- Header -->
                <div class="text-center mb-5">
                    <div class="mb-3">
                        <div class="rounded-circle bg-success d-inline-flex align-items-center justify-content-center shadow-sm" style="width: 80px; height: 80px;">
                            <i class="fas fa-plus fa-2x text-white"></i>
                        </div>
                    </div>
                    <h1 class="display-6 fw-bold text-gradient mb-2">Tạo chủ đề mới</h1>
                    <p class="lead text-muted">Thêm danh mục mới cho hệ thống tin tức</p>
                    
                    <div class="mt-4">
                        <a asp-controller="Admin" asp-action="ChuDe" class="btn btn-outline-secondary hover-lift">
                            <i class="fas fa-arrow-left me-2"></i>Quay lại danh sách
                        </a>
                    </div>
                </div>

                <div class="card border-0 shadow-lg hover-lift">
                    <div class="card-header gradient-bg text-white border-0 py-4">
                        <h5 class="mb-0 fw-600">
                            <i class="fas fa-info-circle me-2"></i>Thông tin chủ đề
                        </h5>
                    </div>
                <div class="card-body">
                    <form asp-controller="Admin" asp-action="CreateChuDe" method="post">
                        <div class="row">
                            <div class="col-md-8">
                                <div class="mb-3">
                                    <label asp-for="TenChuDe" class="form-label">Tên chủ đề <span class="text-danger">*</span></label>
                                    <input asp-for="TenChuDe" class="form-control" placeholder="Nhập tên chủ đề..." maxlength="100" />
                                    <span asp-validation-for="TenChuDe" class="text-danger"></span>
                                </div>
                                <div class="mb-3">
                                    <label class="form-label">Slug</label>
                                    <input asp-for="Slug" class="form-control" placeholder="Tự động tạo nếu bỏ trống" maxlength="100" />
                                    <span asp-validation-for="Slug" class="text-danger"></span>
                                    <div class="form-text">Slug dùng cho URL, ví dụ: "tin-tuc", "the-thao".</div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="card bg-light">
                                    <div class="card-body">
                                        <h6 class="card-title">
                                            <i class="fas fa-info-circle me-2"></i>Hướng dẫn
                                        </h6>
                                        <ul class="list-unstyled mb-0">
                                            <li class="mb-2">
                                                <i class="fas fa-check text-success me-2"></i>
                                                Tên chủ đề phải duy nhất
                                            </li>
                                            <li class="mb-2">
                                                <i class="fas fa-check text-success me-2"></i>
                                                Tên chủ đề tối đa 100 ký tự
                                            </li>
                                            <li class="mb-2">
                                                <i class="fas fa-check text-success me-2"></i>
                                                Slug tối đa 100 ký tự
                                            </li>
                                            <li>
                                                <i class="fas fa-check text-success me-2"></i>
                                                Có thể chỉnh sửa sau
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-1"></i>Lưu chủ đề
                            </button>
                            <a asp-controller="Admin" asp-action="ChuDe" class="btn btn-secondary">
                                <i class="fas fa-times me-1"></i>Hủy
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
