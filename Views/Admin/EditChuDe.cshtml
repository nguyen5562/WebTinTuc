@model WebTinTuc.Models.ChuDe
@{
    ViewData["Title"] = "Chỉnh sửa chủ đề";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="h3 mb-0 text-gray-800">
                    <i class="fas fa-edit me-2"></i>Chỉnh sửa chủ đề
                </h1>
                <a asp-controller="Admin" asp-action="ChuDe" class="btn btn-secondary">
                    <i class="fas fa-arrow-left me-1"></i>Quay lại
                </a>
            </div>

            <div class="card shadow">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Thông tin chủ đề</h6>
                </div>
                <div class="card-body">
                    <form asp-controller="Admin" asp-action="EditChuDe" method="post">
                        <input asp-for="IdchuDe" type="hidden" />
                        <div class="row">
                            <div class="col-md-8">
                                <div class="mb-3">
                                    <label asp-for="TenChuDe" class="form-label">Tên chủ đề <span class="text-danger">*</span></label>
                                    <input asp-for="TenChuDe" class="form-control" placeholder="Nhập tên chủ đề..." maxlength="100" />
                                    <span asp-validation-for="TenChuDe" class="text-danger"></span>
                                </div>
                                <div class="mb-3">
                                    <label asp-for="Slug" class="form-label">Slug</label>
                                    <input asp-for="Slug" class="form-control" placeholder="Nhập slug chủ đề..." maxlength="100" />
                                    <span asp-validation-for="Slug" class="text-danger"></span>
                                    <div class="form-text">Slug dùng cho URL, ví dụ: "tin-tuc", "the-thao".</div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="card bg-light">
                                    <div class="card-body">
                                        <h6 class="card-title">
                                            <i class="fas fa-info-circle me-2"></i>Thông tin
                                        </h6>
                                        <ul class="list-unstyled mb-0">
                                            <li class="mb-2">
                                                <i class="fas fa-hashtag text-primary me-2"></i>
                                                <strong>ID:</strong> @Model.IdchuDe
                                            </li>
                                            <li class="mb-2">
                                                <i class="fas fa-file-alt text-info me-2"></i>
                                                <strong>Số bài viết:</strong> @(ViewBag.BaiVietCount ?? 0)
                                            </li>
                                            <li class="mb-2">
                                                <i class="fas fa-link text-success me-2"></i>
                                                <strong>Slug:</strong> @Model.Slug
                                            </li>
                                            <li>
                                                <i class="fas fa-toggle-on text-warning me-2"></i>
                                                <strong>Trạng thái:</strong> @(Model.DaKichHoat == true ? "Kích hoạt" : "Tắt")
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-1"></i>Cập nhật chủ đề
                            </button>
                            <a asp-controller="Admin" asp-action="ChuDe" class="btn btn-secondary">
                                <i class="fas fa-times me-1"></i>Hủy
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
