@model WebTinTuc.Models.NguoiDung
@{
    ViewData["Title"] = "Chỉnh sửa người dùng";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="h3 mb-0 text-gray-800">
                    <i class="fas fa-user-edit me-2"></i>Chỉnh sửa người dùng
                </h1>
                <a asp-controller="Admin" asp-action="NguoiDung" class="btn btn-secondary">
                    <i class="fas fa-arrow-left me-1"></i>Quay lại
                </a>
            </div>

            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Thông tin người dùng</h6>
                </div>
                <div class="card-body">
                    <form asp-action="EditNguoiDung" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="id" value="@Model.IdnguoiDung" />
                        
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Họ và tên <span class="text-danger">*</span></label>
                                    <input type="text" class="form-control" name="hoTen" value="@Model.HoTen" required maxlength="100" />
                                </div>
                                <div class="mb-3">
                                    <label class="form-label">Email</label>
                                    <input type="text" class="form-control" value="@Model.Email" readonly />
                                    <small class="form-text text-muted">Email không thể thay đổi</small>
                                </div>
                                <div class="mb-3">
                                    <label class="form-label">Số điện thoại</label>
                                    <input type="tel" class="form-control" name="soDienThoai" value="@Model.SoDienThoai" maxlength="20" />
                                </div>
                                <div class="mb-3">
                                    @await Html.PartialAsync("_ImageUpload", Model.UrlanhDaiDien, new ViewDataDictionary(ViewData) {
                                        { "FieldId", "urlAnhDaiDien" },
                                        { "FieldName", "urlAnhDaiDien" },
                                        { "Label", "URL ảnh đại diện" },
                                        { "Placeholder", "https://example.com/avatar.jpg" },
                                        { "HelpText", "URL ảnh đại diện là tùy chọn" }
                                    })
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Quyền hạn <span class="text-danger">*</span></label>
                                    <select class="form-select" name="idquyenHan" required>
                                        @if (ViewBag.QuyenHans != null)
                                        {
                                            @foreach (var quyenHan in (List<WebTinTuc.Models.QuyenHan>)ViewBag.QuyenHans)
                                            {
                                                <option value="@quyenHan.IdquyenHan" selected="@(quyenHan.IdquyenHan == Model.IdquyenHan)">
                                                    @quyenHan.TenQuyenHan
                                                </option>
                                            }
                                        }
                                    </select>
                                </div>
                                <div class="mb-3">
                                    <div class="form-check form-switch">
                                        <input name="daKichHoat" class="form-check-input" type="checkbox" value="true" @(Model.DaKichHoat == true ? "checked" : "") />
                                        <input type="hidden" name="daKichHoat" value="false" />
                                        <label class="form-check-label">
                                            Kích hoạt tài khoản
                                        </label>
                                    </div>
                                </div>
                                <div class="mb-3">
                                    <label class="form-label">Ngày đăng ký</label>
                                    <input type="text" class="form-control" value="@Model.NgayDangKy?.ToString("dd/MM/yyyy HH:mm")" readonly />
                                </div>
                                <div class="mb-3">
                                    <label class="form-label">Lần đăng nhập cuối</label>
                                    <input type="text" class="form-control" value="@(Model.LanDangNhapCuoi?.ToString("dd/MM/yyyy HH:mm") ?? "Chưa có")" readonly />
                                </div>
                            </div>
                        </div>
                        
                        <div class="text-center mt-4">
                            <button type="submit" class="btn btn-primary me-2">
                                <i class="fas fa-save me-1"></i>Cập nhật
                            </button>
                            <a asp-controller="Admin" asp-action="NguoiDung" class="btn btn-secondary">
                                <i class="fas fa-times me-1"></i>Hủy
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
