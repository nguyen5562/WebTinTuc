@{
    ViewData["Title"] = "Quản trị hệ thống";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="h3 mb-0 text-gray-800">
                    <i class="fas fa-tachometer-alt me-2"></i>Quản trị hệ thống
                </h1>
            </div>

            <!-- Thống kê tổng quan -->
            <div class="row mb-4">
                <div class="col-xl-3 col-md-6 mb-4">
                    <div class="card border-left-primary shadow h-100 py-2">
                        <div class="card-body">
                            <div class="row no-gutters align-items-center">
                                <div class="col mr-2">
                                    <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                        Tổng số bài viết
                                    </div>
                                    <div class="h5 mb-0 font-weight-bold text-gray-800" id="totalArticles">-</div>
                                </div>
                                <div class="col-auto">
                                    <i class="fas fa-file-alt fa-2x text-gray-300"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-xl-3 col-md-6 mb-4">
                    <div class="card border-left-success shadow h-100 py-2">
                        <div class="card-body">
                            <div class="row no-gutters align-items-center">
                                <div class="col mr-2">
                                    <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                        Bài viết đã xuất bản
                                    </div>
                                    <div class="h5 mb-0 font-weight-bold text-gray-800" id="publishedArticles">-</div>
                                </div>
                                <div class="col-auto">
                                    <i class="fas fa-check-circle fa-2x text-gray-300"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-xl-3 col-md-6 mb-4">
                    <div class="card border-left-info shadow h-100 py-2">
                        <div class="card-body">
                            <div class="row no-gutters align-items-center">
                                <div class="col mr-2">
                                    <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                                        Tổng số người dùng
                                    </div>
                                    <div class="h5 mb-0 font-weight-bold text-gray-800" id="totalUsers">-</div>
                                </div>
                                <div class="col-auto">
                                    <i class="fas fa-users fa-2x text-gray-300"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-xl-3 col-md-6 mb-4">
                    <div class="card border-left-warning shadow h-100 py-2">
                        <div class="card-body">
                            <div class="row no-gutters align-items-center">
                                <div class="col mr-2">
                                    <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                                        Tổng số chủ đề
                                    </div>
                                    <div class="h5 mb-0 font-weight-bold text-gray-800" id="totalTopics">-</div>
                                </div>
                                <div class="col-auto">
                                    <i class="fas fa-tags fa-2x text-gray-300"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Các chức năng quản trị -->
            <div class="row">
                <div class="col-lg-6 mb-4">
                    <div class="card shadow">
                        <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                            <h6 class="m-0 font-weight-bold text-primary">
                                <i class="fas fa-tags me-2"></i>Quản lý chủ đề
                            </h6>
                        </div>
                        <div class="card-body">
                            <p class="mb-3">Quản lý các chủ đề bài viết trong hệ thống</p>
                            <a asp-controller="Admin" asp-action="ChuDe" class="btn btn-primary">
                                <i class="fas fa-arrow-right me-1"></i>Quản lý chủ đề
                            </a>
                        </div>
                    </div>
                </div>

                <div class="col-lg-6 mb-4">
                    <div class="card shadow">
                        <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                            <h6 class="m-0 font-weight-bold text-success">
                                <i class="fas fa-users me-2"></i>Quản lý người dùng
                            </h6>
                        </div>
                        <div class="card-body">
                            <p class="mb-3">Quản lý tài khoản và quyền hạn người dùng</p>
                            <a asp-controller="Admin" asp-action="NguoiDung" class="btn btn-success">
                                <i class="fas fa-arrow-right me-1"></i>Quản lý người dùng
                            </a>
                        </div>
                    </div>
                </div>

                <div class="col-lg-6 mb-4">
                    <div class="card shadow">
                        <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                            <h6 class="m-0 font-weight-bold text-info">
                                <i class="fas fa-file-alt me-2"></i>Quản lý bài viết
                            </h6>
                        </div>
                        <div class="card-body">
                            <p class="mb-3">Quản lý và phê duyệt bài viết</p>
                            <a asp-controller="BaiViet" asp-action="Manage" class="btn btn-info">
                                <i class="fas fa-arrow-right me-1"></i>Quản lý bài viết
                            </a>
                        </div>
                    </div>
                </div>

                <div class="col-lg-6 mb-4">
                    <div class="card shadow">
                        <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                            <h6 class="m-0 font-weight-bold text-warning">
                                <i class="fas fa-chart-bar me-2"></i>Thống kê hệ thống
                            </h6>
                        </div>
                        <div class="card-body">
                            <p class="mb-3">Xem báo cáo và thống kê chi tiết</p>
                            <button class="btn btn-warning" disabled>
                                <i class="fas fa-arrow-right me-1"></i>Thống kê (Sắp có)
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Load thống kê khi trang load
        document.addEventListener('DOMContentLoaded', function() {
            loadStatistics();
        });

        function loadStatistics() {
            // Hiển thị dữ liệu thống kê từ ViewBag
            document.getElementById('totalArticles').textContent = '@ViewBag.TotalArticles';
            document.getElementById('publishedArticles').textContent = '@ViewBag.PublishedArticles';
            document.getElementById('totalUsers').textContent = '@ViewBag.TotalUsers';
            document.getElementById('totalTopics').textContent = '@ViewBag.TotalTopics';
        }
    </script>
}
