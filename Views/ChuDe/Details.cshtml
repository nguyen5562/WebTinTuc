@model WebTinTuc.Models.BaiViet
@{
    ViewData["Title"] = Model.TieuDe;
    var baiVietLienQuan = ViewBag.BaiVietLienQuan as List<WebTinTuc.Models.BaiViet>;
}

<div class="container">
    <!-- Breadcrumb -->
    <nav aria-label="breadcrumb" class="mt-3">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Trang chủ</a></li>
            <li class="breadcrumb-item">
                <a asp-controller="ChuDe" asp-action="Index" asp-route-slug="@Model.IdchuDeNavigation?.Slug">
                    @Model.IdchuDeNavigation?.TenChuDe
                </a>
            </li>
            <li class="breadcrumb-item active" aria-current="page">@Model.TieuDe</li>
        </ol>
    </nav>

    <div class="row">
        <!-- Nội dung chính -->
        <div class="col-lg-8">
            <article class="card shadow-sm">
                <!-- Header bài viết -->
                <div class="card-header bg-light">
                    <div class="d-flex justify-content-between align-items-start mb-2">
                        <div>
                            <h1 class="h2 text-primary mb-2">@Model.TieuDe</h1>
                            @if (Model.LaTinNong == true)
                            {
                                <span class="badge bg-danger fs-6 mb-2">HOT</span>
                            }
                        </div>
                    </div>
                    
                    <div class="row text-muted small">
                        <div class="col-md-6">
                            <i class="fas fa-user me-1"></i>
                            <strong>Tác giả:</strong> @Model.IdtacGiaNavigation?.HoTen
                        </div>
                        <div class="col-md-6">
                            <i class="fas fa-folder me-1"></i>
                            <strong>Chủ đề:</strong> 
                            <a asp-controller="ChuDe" asp-action="Index" asp-route-slug="@Model.IdchuDeNavigation?.Slug" 
                               class="text-decoration-none">@Model.IdchuDeNavigation?.TenChuDe</a>
                        </div>
                    </div>
                    
                    <div class="row text-muted small mt-2">
                        <div class="col-md-6">
                            <i class="fas fa-clock me-1"></i>
                            <strong>Ngày đăng:</strong> 
                            @if (Model.NgayXuatBan.HasValue)
                            {
                                @Model.NgayXuatBan.Value.ToString("dd/MM/yyyy HH:mm")
                            }
                            else
                            {
                                @Model.NgayTao.Value.ToString("dd/MM/yyyy HH:mm")
                            }
                        </div>
                        <div class="col-md-6">
                            <i class="fas fa-eye me-1"></i>
                            <strong>Lượt xem:</strong> @Model.LuotXem
                        </div>
                    </div>
                </div>

                <!-- Ảnh bìa -->
                @if (!string.IsNullOrEmpty(Model.UrlanhBia))
                {
                    <div class="text-center p-3">
                        <img src="@Model.UrlanhBia" class="img-fluid rounded" alt="@Model.TieuDe" style="max-height: 400px;">
                    </div>
                }

                <!-- Tóm tắt -->
                @if (!string.IsNullOrEmpty(Model.TomTat))
                {
                    <div class="card-body border-bottom">
                        <div class="alert alert-info">
                            <h5 class="alert-heading">
                                <i class="fas fa-info-circle me-2"></i>Tóm tắt
                            </h5>
                            <p class="mb-0">@Model.TomTat</p>
                        </div>
                    </div>
                }

                <!-- Nội dung bài viết -->
                <div class="card-body">
                    <div class="article-content">
                        @Html.Raw(Model.NoiDung)
                    </div>
                </div>

                <!-- Footer bài viết -->
                <div class="card-footer bg-light">
                    <div class="row align-items-center">
                        <div class="col-md-6">
                            <div class="d-flex align-items-center">
                                <span class="text-muted me-3">Chia sẻ:</span>
                                <a href="#" class="btn btn-outline-primary btn-sm me-2">
                                    <i class="fab fa-facebook-f"></i>
                                </a>
                                <a href="#" class="btn btn-outline-info btn-sm me-2">
                                    <i class="fab fa-twitter"></i>
                                </a>
                                <a href="#" class="btn btn-outline-success btn-sm">
                                    <i class="fab fa-whatsapp"></i>
                                </a>
                            </div>
                        </div>
                        <div class="col-md-6 text-end">
                            <small class="text-muted">
                                <i class="fas fa-comments me-1"></i>@Model.BinhLuans.Count bình luận
                            </small>
                        </div>
                    </div>
                </div>
            </article>

            <!-- Bình luận -->
            <div class="card mt-4">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="fas fa-comments me-2"></i>Bình luận (@Model.BinhLuans.Count)
                    </h5>
                </div>
                <div class="card-body">
                    @if (Context.Session.GetString("UserId") != null)
                    {
                        <!-- Form bình luận -->
                        <div class="mb-4">
                            <form>
                                <div class="mb-3">
                                    <label for="commentContent" class="form-label">Viết bình luận</label>
                                    <textarea class="form-control" id="commentContent" rows="3" 
                                              placeholder="Nhập bình luận của bạn..."></textarea>
                                </div>
                                <button type="submit" class="btn btn-primary">
                                    <i class="fas fa-paper-plane me-1"></i>Gửi bình luận
                                </button>
                            </form>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-warning text-center">
                            <i class="fas fa-info-circle me-2"></i>
                            Bạn cần <a asp-controller="Account" asp-action="Login" class="text-decoration-none">đăng nhập</a> 
                            để bình luận
                        </div>
                    }

                    <!-- Danh sách bình luận -->
                    @if (Model.BinhLuans != null && Model.BinhLuans.Any())
                    {
                        <div class="comments-list">
                            @foreach (var binhLuan in Model.BinhLuans.Where(b => b.DaDuyet == true).OrderByDescending(b => b.NgayBinhLuan))
                            {
                                <div class="comment-item border-bottom py-3">
                                    <div class="d-flex">
                                        <div class="flex-shrink-0 me-3">
                                            @if (!string.IsNullOrEmpty(binhLuan.IdnguoiDungNavigation?.UrlanhDaiDien))
                                            {
                                                <img src="@binhLuan.IdnguoiDungNavigation.UrlanhDaiDien" 
                                                     class="rounded-circle" style="width: 40px; height: 40px; object-fit: cover;" 
                                                     alt="@binhLuan.IdnguoiDungNavigation.HoTen">
                                            }
                                            else
                                            {
                                                <div class="bg-light rounded-circle d-flex align-items-center justify-content-center" 
                                                     style="width: 40px; height: 40px;">
                                                    <i class="fas fa-user text-muted"></i>
                                                </div>
                                            }
                                        </div>
                                        <div class="flex-grow-1">
                                            <div class="d-flex justify-content-between align-items-start mb-1">
                                                <h6 class="mb-0">@binhLuan.IdnguoiDungNavigation?.HoTen</h6>
                                                <small class="text-muted">
                                                    <i class="fas fa-clock me-1"></i>
                                                    @binhLuan.NgayBinhLuan.Value.ToString("dd/MM/yyyy HH:mm")
                                                </small>
                                            </div>
                                            <p class="mb-0">@binhLuan.NoiDung</p>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-4 text-muted">
                            <i class="fas fa-comments fa-2x mb-2"></i>
                            <p>Chưa có bình luận nào. Hãy là người đầu tiên bình luận!</p>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Sidebar -->
        <div class="col-lg-4">
            <!-- Bài viết liên quan -->
            @if (baiVietLienQuan != null && baiVietLienQuan.Any())
            {
                <div class="card mb-4">
                    <div class="card-header bg-warning text-dark">
                        <h5 class="mb-0"><i class="fas fa-newspaper me-2"></i>Bài viết liên quan</h5>
                    </div>
                    <div class="card-body">
                        @foreach (var baiViet in baiVietLienQuan)
                        {
                            <div class="d-flex mb-3">
                                @if (!string.IsNullOrEmpty(baiViet.UrlanhBia))
                                {
                                    <img src="@baiViet.UrlanhBia" class="rounded me-3" 
                                         style="width: 60px; height: 60px; object-fit: cover;" alt="@baiViet.TieuDe">
                                }
                                else
                                {
                                    <div class="bg-light rounded me-3 d-flex align-items-center justify-content-center" 
                                         style="width: 60px; height: 60px;">
                                        <i class="fas fa-image text-muted"></i>
                                    </div>
                                }
                                <div class="flex-grow-1">
                                    <h6 class="mb-1">
                                        <a asp-controller="ChuDe" asp-action="Details" asp-route-id="@baiViet.IdbaiViet" 
                                           class="text-decoration-none text-dark">
                                            @(baiViet.TieuDe.Length > 50 ? baiViet.TieuDe.Substring(0, 50) + "..." : baiViet.TieuDe)
                                        </a>
                                    </h6>
                                    <small class="text-muted">
                                        <i class="fas fa-clock me-1"></i>
                                        @if (baiViet.NgayXuatBan.HasValue)
                                        {
                                            @baiViet.NgayXuatBan.Value.ToString("dd/MM/yyyy")
                                        }
                                        else
                                        {
                                            @baiViet.NgayTao.Value.ToString("dd/MM/yyyy")
                                        }
                                    </small>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            }

            <!-- Quảng cáo hoặc thông tin khác -->
            <div class="card mb-4">
                <div class="card-body text-center">
                    <h6 class="text-muted">Quảng cáo</h6>
                    <div class="bg-light p-4 rounded">
                        <i class="fas fa-ad fa-2x text-muted mb-2"></i>
                        <p class="text-muted mb-0">Vị trí quảng cáo</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <style>
        .article-content {
            line-height: 1.8;
            font-size: 1.1rem;
        }
        
        .article-content h1, .article-content h2, .article-content h3 {
            color: #0d6efd;
            margin-top: 2rem;
            margin-bottom: 1rem;
        }
        
        .article-content p {
            margin-bottom: 1.5rem;
        }
        
        .article-content img {
            max-width: 100%;
            height: auto;
            border-radius: 8px;
            margin: 1rem 0;
        }
        
        .comment-item:last-child {
            border-bottom: none !important;
        }
    </style>
}
