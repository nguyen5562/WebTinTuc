@model IEnumerable<WebTinTuc.Models.BaiViet>
@{
    ViewData["Title"] = ViewBag.ChuDe?.TenChuDe ?? "Chủ đề";
    var chuDe = ViewBag.ChuDe as WebTinTuc.Models.ChuDe;
    var chuDesKhac = ViewBag.ChuDesKhac as List<WebTinTuc.Models.ChuDe>;
    var baiVietMoiNhat = ViewBag.BaiVietMoiNhat as List<WebTinTuc.Models.BaiViet>;
    var search = ViewBag.Search as string;
    var currentPage = (int)ViewBag.CurrentPage;
    var totalPages = (int)ViewBag.TotalPages;
    var totalItems = (int)ViewBag.TotalItems;
    var hasPreviousPage = (bool)ViewBag.HasPreviousPage;
    var hasNextPage = (bool)ViewBag.HasNextPage;
    var pageSize = (int)ViewBag.PageSize;
}

<div class="container">
    <!-- Breadcrumb -->
    <nav aria-label="breadcrumb" class="mt-3">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Trang chủ</a></li>
            <li class="breadcrumb-item active" aria-current="page">@chuDe?.TenChuDe</li>
        </ol>
    </nav>

    <div class="row">
        <!-- Nội dung chính -->
        <div class="col-lg-8">
            <!-- Header chủ đề -->
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h1 class="text-primary mb-2">@chuDe?.TenChuDe</h1>
                    <p class="text-muted mb-0">@totalItems bài viết</p>
                </div>
                <div class="text-end">
                    <span class="badge bg-primary fs-6">@Model.Count() bài viết</span>
                </div>
            </div>

            <!-- Tìm kiếm -->
            <div class="card mb-4">
                <div class="card-body">
                    <form method="get" asp-controller="ChuDe" asp-action="Index" asp-route-slug="@chuDe?.Slug">
                        <input type="hidden" name="slug" value="@chuDe?.Slug" />
                        <div class="row">
                            <div class="col-md-8">
                                <div class="input-group">
                                    <input type="text" class="form-control" name="search" value="@search" 
                                           placeholder="Tìm kiếm bài viết trong @chuDe?.TenChuDe...">
                                    <button class="btn btn-primary" type="submit">
                                        <i class="fas fa-search"></i>
                                    </button>
                                </div>
                            </div>
                            <div class="col-md-4">
                                @if (!string.IsNullOrEmpty(search))
                                {
                                    <a asp-controller="ChuDe" asp-action="Index" asp-route-slug="@chuDe?.Slug" 
                                       class="btn btn-outline-secondary">
                                        <i class="fas fa-times me-1"></i>Xóa tìm kiếm
                                    </a>
                                }
                            </div>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Kết quả tìm kiếm -->
            @if (!string.IsNullOrEmpty(search))
            {
                <div class="alert alert-info">
                    <i class="fas fa-search me-2"></i>
                    Tìm thấy <strong>@totalItems</strong> bài viết với từ khóa "<strong>@search</strong>" trong @chuDe?.TenChuDe
                </div>
            }

            <!-- Danh sách bài viết -->
            @if (Model != null && Model.Any())
            {
                <div class="row">
                    @foreach (var baiViet in Model)
                    {
                        <div class="col-md-6 mb-4">
                            <div class="card h-100 shadow-sm">
                                @if (!string.IsNullOrEmpty(baiViet.UrlanhBia))
                                {
                                    <img src="@baiViet.UrlanhBia" class="card-img-top" alt="@baiViet.TieuDe" 
                                         style="height: 200px; object-fit: cover;">
                                }
                                else
                                {
                                    <div class="card-img-top bg-light d-flex align-items-center justify-content-center" 
                                         style="height: 200px;">
                                        <i class="fas fa-image text-muted fa-3x"></i>
                                    </div>
                                }
                                
                                <div class="card-body d-flex flex-column">
                                    <h5 class="card-title">
                                        <a asp-controller="ChuDe" asp-action="Details" asp-route-id="@baiViet.IdbaiViet" 
                                           class="text-decoration-none text-dark">@baiViet.TieuDe</a>
                                    </h5>
                                    
                                    <p class="card-text text-muted flex-grow-1">
                                        @if (!string.IsNullOrEmpty(baiViet.TomTat))
                                        {
                                            @(baiViet.TomTat.Length > 120 ? baiViet.TomTat.Substring(0, 120) + "..." : baiViet.TomTat)
                                        }
                                    </p>
                                    
                                    <div class="mt-auto">
                                        <div class="d-flex justify-content-between align-items-center text-muted small mb-2">
                                            <span>
                                                <i class="fas fa-user me-1"></i>@baiViet.IdtacGiaNavigation?.HoTen
                                            </span>
                                            <span>
                                                <i class="fas fa-comments me-1"></i>@baiViet.BinhLuans.Count bình luận
                                            </span>
                                        </div>
                                        
                                        <div class="d-flex justify-content-between align-items-center">
                                            <small class="text-muted">
                                                <i class="fas fa-clock me-1"></i>
                                                @if (baiViet.NgayXuatBan.HasValue)
                                                {
                                                    @baiViet.NgayXuatBan.Value.ToString("dd/MM/yyyy HH:mm")
                                                }
                                                else
                                                {
                                                    @baiViet.NgayTao.Value.ToString("dd/MM/yyyy HH:mm")
                                                }
                                            </small>
                                            
                                            <div class="d-flex align-items-center">
                                                @if (baiViet.LaTinNong == true)
                                                {
                                                    <span class="badge bg-danger me-1">HOT</span>
                                                }
                                                <span class="badge bg-secondary">@baiViet.LuotXem lượt xem</span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>

                <!-- Phân trang -->
                @if (totalPages > 1)
                {
                    <nav aria-label="Phân trang">
                        <ul class="pagination justify-content-center">
                            @if (hasPreviousPage)
                            {
                                <li class="page-item">
                                    <a class="page-link" asp-controller="ChuDe" asp-action="Index" 
                                       asp-route-slug="@chuDe?.Slug" asp-route-search="@search" asp-route-page="@(currentPage - 1)">
                                        <i class="fas fa-chevron-left"></i> Trước
                                    </a>
                                </li>
                            }

                            @for (int i = Math.Max(1, currentPage - 2); i <= Math.Min(totalPages, currentPage + 2); i++)
                            {
                                <li class="page-item @(i == currentPage ? "active" : "")">
                                    <a class="page-link" asp-controller="ChuDe" asp-action="Index" 
                                       asp-route-slug="@chuDe?.Slug" asp-route-search="@search" asp-route-page="@i">@i</a>
                                </li>
                            }

                            @if (hasNextPage)
                            {
                                <li class="page-item">
                                    <a class="page-link" asp-controller="ChuDe" asp-action="Index" 
                                       asp-route-slug="@chuDe?.Slug" asp-route-search="@search" asp-route-page="@(currentPage + 1)">
                                        Sau <i class="fas fa-chevron-right"></i>
                                    </a>
                                </li>
                            }
                        </ul>
                    </nav>
                }
            }
            else
            {
                <div class="text-center py-5">
                    <i class="fas fa-newspaper fa-4x text-muted mb-3"></i>
                    <h4 class="text-muted">
                        @if (!string.IsNullOrEmpty(search))
                        {
                            <text>Không tìm thấy bài viết nào với từ khóa "@search"</text>
                        }
                        else
                        {
                            <text>Chưa có bài viết nào trong @chuDe?.TenChuDe</text>
                        }
                    </h4>
                    <p class="text-muted">
                        @if (!string.IsNullOrEmpty(search))
                        {
                            <text>Hãy thử tìm kiếm với từ khóa khác.</text>
                        }
                        else
                        {
                            <text>Hãy quay lại sau để xem những tin tức mới nhất!</text>
                        }
                    </p>
                    @if (!string.IsNullOrEmpty(search))
                    {
                        <a asp-controller="ChuDe" asp-action="Index" asp-route-slug="@chuDe?.Slug" 
                           class="btn btn-primary">
                            <i class="fas fa-list me-1"></i>Xem tất cả bài viết
                        </a>
                    }
                </div>
            }
        </div>

        <!-- Sidebar -->
        <div class="col-lg-4">
            <!-- Chủ đề khác -->
            <div class="card mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="fas fa-list me-2"></i>Chủ đề khác</h5>
                </div>
                <div class="card-body">
                    @if (chuDesKhac != null && chuDesKhac.Any())
                    {
                        <ul class="list-unstyled mb-0">
                            @foreach (var chuDeKhac in chuDesKhac)
                            {
                                <li class="mb-2">
                                    <a asp-controller="ChuDe" asp-action="Index" asp-route-slug="@chuDeKhac.Slug" 
                                       class="text-decoration-none d-flex justify-content-between align-items-center">
                                        <span>@chuDeKhac.TenChuDe</span>
                                        <i class="fas fa-chevron-right text-muted"></i>
                                    </a>
                                </li>
                            }
                        </ul>
                    }
                </div>
            </div>

            <!-- Bài viết mới nhất -->
            <div class="card mb-4">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0"><i class="fas fa-clock me-2"></i>Bài viết mới nhất</h5>
                </div>
                <div class="card-body">
                    @if (baiVietMoiNhat != null && baiVietMoiNhat.Any())
                    {
                        @foreach (var baiViet in baiVietMoiNhat)
                        {
                            <div class="d-flex mb-3">
                                @if (!string.IsNullOrEmpty(baiViet.UrlanhBia))
                                {
                                    <img src="@baiViet.UrlanhBia" class="rounded me-3" 
                                         style="width: 60px; height: 60px; object-fit: cover;" alt="@baiViet.TieuDe">
                                }
                                else
                                {
                                    <div class="bg-light rounded me-3 d-flex align-items-center justify-content-center" 
                                         style="width: 60px; height: 60px;">
                                        <i class="fas fa-image text-muted"></i>
                                    </div>
                                }
                                <div class="flex-grow-1">
                                    <h6 class="mb-1">
                                        <a asp-controller="ChuDe" asp-action="Details" asp-route-id="@baiViet.IdbaiViet" 
                                           class="text-decoration-none text-dark">
                                            @(baiViet.TieuDe.Length > 50 ? baiViet.TieuDe.Substring(0, 50) + "..." : baiViet.TieuDe)
                                        </a>
                                    </h6>
                                    <small class="text-muted">
                                        <i class="fas fa-clock me-1"></i>
                                        @if (baiViet.NgayXuatBan.HasValue)
                                        {
                                            @baiViet.NgayXuatBan.Value.ToString("dd/MM/yyyy")
                                        }
                                        else
                                        {
                                            @baiViet.NgayTao.Value.ToString("dd/MM/yyyy")
                                        }
                                    </small>
                                </div>
                            </div>
                        }
                    }
                </div>
            </div>
        </div>
    </div>
</div>
