@{
    ViewData["Title"] = "Trang chủ";
    var chuDes = ViewBag.ChuDes as List<WebTinTuc.Models.ChuDe>;
    var baiVietHot = ViewBag.BaiVietHot as WebTinTuc.Models.BaiViet;
    var baiVietTheoChuDe = ViewBag.BaiVietTheoChuDe as Dictionary<WebTinTuc.Models.ChuDe, List<WebTinTuc.Models.BaiViet>>;
}

<div class="container-fluid px-0">
    <!-- Bài viết HOT -->
    @if (baiVietHot != null)
    {
        <div class="bg-danger text-white py-3 mb-4">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-auto">
                        <span class="badge bg-warning text-dark fs-6 px-3 py-2">
                            <i class="fas fa-fire me-1"></i>HOT
                        </span>
                    </div>
                    <div class="col">
                        <h4 class="mb-0">@baiVietHot.TieuDe</h4>
                        <small>@baiVietHot.TomTat</small>
                    </div>
                    <div class="col-auto">
                        <a asp-controller="BaiViet" asp-action="Details" asp-route-id="@baiVietHot.IdbaiViet" class="btn btn-light btn-sm">Đọc ngay</a>
                    </div>
                </div>
            </div>
        </div>
    }

    <!-- Nội dung chính -->
    <div class="container">
        <div class="row">
            <!-- Cột chính -->
            <div class="col-lg-8">
                @if (baiVietTheoChuDe != null && baiVietTheoChuDe.Any())
                {
                    @foreach (var kvp in baiVietTheoChuDe)
                    {
                        var chuDe = kvp.Key;
                        var baiViets = kvp.Value;
                        
                        <div class="mb-5">
                            <!-- Tiêu đề chủ đề -->
                            <div class="d-flex justify-content-between align-items-center mb-3">
                                <h3 class="text-primary border-bottom border-primary pb-2">
                                    <i class="fas fa-folder-open me-2"></i>@chuDe.TenChuDe
                                </h3>
                                <a asp-controller="ChuDe" asp-action="Index" asp-route-slug="@chuDe.Slug" class="btn btn-outline-primary btn-sm">Xem tất cả</a>
                            </div>

                            <!-- Danh sách bài viết -->
                            <div class="row">
                                @foreach (var baiViet in baiViets)
                                {
                                    <div class="col-md-6 mb-4">
                                        <div class="card h-100 shadow-sm">
                                            @if (!string.IsNullOrEmpty(baiViet.UrlanhBia))
                                            {
                                                <img src="@baiViet.UrlanhBia" class="card-img-top" alt="@baiViet.TieuDe" style="height: 200px; object-fit: cover;">
                                            }
                                            else
                                            {
                                                <div class="card-img-top bg-light d-flex align-items-center justify-content-center" style="height: 200px;">
                                                    <i class="fas fa-image text-muted fa-3x"></i>
                                                </div>
                                            }
                                            
                                            <div class="card-body d-flex flex-column">
                                                <h5 class="card-title">
                                                    <a asp-controller="BaiViet" asp-action="Details" asp-route-id="@baiViet.IdbaiViet" class="text-decoration-none text-dark">@baiViet.TieuDe</a>
                                                </h5>
                                                
                                                <p class="card-text text-muted flex-grow-1">
                                                    @if (!string.IsNullOrEmpty(baiViet.TomTat))
                                                    {
                                                        @(baiViet.TomTat.Length > 150 ? baiViet.TomTat.Substring(0, 150) + "..." : baiViet.TomTat)
                                                    }
                                                </p>
                                                
                                                <div class="mt-auto">
                                                    <div class="d-flex justify-content-between align-items-center text-muted small mb-2">
                                                        <span>
                                                            <i class="fas fa-user me-1"></i>@baiViet.IdtacGiaNavigation?.HoTen
                                                        </span>
                                                        <span>
                                                            <i class="fas fa-comments me-1"></i>0 bình luận
                                                        </span>
                                                    </div>
                                                    
                                                    <div class="d-flex justify-content-between align-items-center">
                                                        <small class="text-muted">
                                                            <i class="fas fa-clock me-1"></i>
                                                            @if (baiViet.NgayXuatBan.HasValue)
                                                            {
                                                                @baiViet.NgayXuatBan.Value.ToString("dd/MM/yyyy HH:mm")
                                                            }
                                                            else
                                                            {
                                                                @baiViet.NgayTao.Value.ToString("dd/MM/yyyy HH:mm")
                                                            }
                                                        </small>
                                                        
                                                        <div class="d-flex align-items-center">
                                                            @if (baiViet.LaTinNong == true)
                                                            {
                                                                <span class="badge bg-danger me-1">HOT</span>
                                                            }
                                                            <span class="badge bg-secondary">@baiViet.LuotXem lượt xem</span>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="text-center py-5">
                        <i class="fas fa-newspaper fa-4x text-muted mb-3"></i>
                        <h4 class="text-muted">Chưa có bài viết nào</h4>
                        <p class="text-muted">Hãy quay lại sau để xem những tin tức mới nhất!</p>
                    </div>
                }
            </div>

            <!-- Sidebar -->
            <div class="col-lg-4">
                <!-- Chủ đề phổ biến -->
                <div class="card mb-4">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0"><i class="fas fa-list me-2"></i>Chủ đề phổ biến</h5>
                    </div>
                    <div class="card-body">
                        @if (chuDes != null && chuDes.Any())
                        {
                            <ul class="list-unstyled mb-0">
                                @foreach (var chuDe in chuDes.Take(8))
                                {
                                    <li class="mb-2">
                                        <a asp-controller="ChuDe" asp-action="Index" asp-route-slug="@chuDe.Slug" class="text-decoration-none d-flex justify-content-between align-items-center">
                                            <span>@chuDe.TenChuDe</span>
                                            <span class="badge bg-light text-dark">@(baiVietTheoChuDe?.ContainsKey(chuDe) == true ? baiVietTheoChuDe[chuDe].Count : 0)</span>
                                        </a>
                                    </li>
                                }
                            </ul>
                        }
                    </div>
                </div>

                <!-- Bài viết mới nhất -->
                <div class="card mb-4">
                    <div class="card-header bg-success text-white">
                        <h5 class="mb-0"><i class="fas fa-clock me-2"></i>Bài viết mới nhất</h5>
                    </div>
                    <div class="card-body">
                        @if (baiVietTheoChuDe != null && baiVietTheoChuDe.Any())
                        {
                            var baiVietMoiNhat = baiVietTheoChuDe.Values
                                .SelectMany(x => x)
                                .OrderByDescending(x => x.NgayXuatBan ?? x.NgayTao)
                                .Take(5)
                                .ToList();
                                
                            @foreach (var baiViet in baiVietMoiNhat)
                            {
                                <div class="d-flex mb-3">
                                    @if (!string.IsNullOrEmpty(baiViet.UrlanhBia))
                                    {
                                        <img src="@baiViet.UrlanhBia" class="rounded me-3" style="width: 60px; height: 60px; object-fit: cover;" alt="@baiViet.TieuDe">
                                    }
                                    else
                                    {
                                        <div class="bg-light rounded me-3 d-flex align-items-center justify-content-center" style="width: 60px; height: 60px;">
                                            <i class="fas fa-image text-muted"></i>
                                        </div>
                                    }
                                    <div class="flex-grow-1">
                                        <h6 class="mb-1">
                                            <a asp-controller="BaiViet" asp-action="Details" asp-route-id="@baiViet.IdbaiViet" class="text-decoration-none text-dark">@(baiViet.TieuDe.Length > 50 ? baiViet.TieuDe.Substring(0, 50) + "..." : baiViet.TieuDe)</a>
                                        </h6>
                                        <small class="text-muted">
                                            <i class="fas fa-clock me-1"></i>
                                            @if (baiViet.NgayXuatBan.HasValue)
                                            {
                                                @baiViet.NgayXuatBan.Value.ToString("dd/MM/yyyy");
                                            }
                                            else
                                            {
                                                @baiViet.NgayTao.Value.ToString("dd/MM/yyyy");
                                            }
                                        </small>
                                    </div>
                                </div>
                            }
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
