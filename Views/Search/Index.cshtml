@model IEnumerable<WebTinTuc.Models.BaiViet>
@{
    ViewData["Title"] = "Kết quả tìm kiếm";
    var searchTerm = ViewBag.SearchTerm as string;
    var chuDes = ViewBag.ChuDes as List<WebTinTuc.Models.ChuDe>;
    var baiVietMoiNhat = ViewBag.BaiVietMoiNhat as List<WebTinTuc.Models.BaiViet>;
    var currentPage = (int)ViewBag.CurrentPage;
    var totalPages = (int)ViewBag.TotalPages;
    var totalItems = (int)ViewBag.TotalItems;
    var hasPreviousPage = (bool)ViewBag.HasPreviousPage;
    var hasNextPage = (bool)ViewBag.HasNextPage;
    var pageSize = (int)ViewBag.PageSize;
    var message = ViewBag.Message as string;
}

<div class="container">
    <!-- Breadcrumb -->
    <nav aria-label="breadcrumb" class="mt-3">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Trang chủ</a></li>
            <li class="breadcrumb-item active" aria-current="page">Tìm kiếm</li>
        </ol>
    </nav>

    <div class="row">
        <!-- Nội dung chính -->
        <div class="col-lg-8">
            <!-- Header tìm kiếm -->
            <div class="mb-4">
                <h1 class="text-primary mb-2">
                    <i class="fas fa-search me-2"></i>Kết quả tìm kiếm
                </h1>
                @if (!string.IsNullOrEmpty(searchTerm))
                {
                    <p class="text-muted mb-0">Từ khóa: "<strong>@searchTerm</strong>"</p>
                }
            </div>


            <!-- Thông báo -->
            @if (!string.IsNullOrEmpty(message))
            {
                <div class="alert alert-warning">
                    <i class="fas fa-exclamation-triangle me-2"></i>@message
                </div>
            }

            <!-- Kết quả tìm kiếm -->
            @if (!string.IsNullOrEmpty(searchTerm))
            {
                @if (Model != null && Model.Any())
                {
                    <div class="alert alert-info">
                        <i class="fas fa-info-circle me-2"></i>
                        Tìm thấy <strong>@totalItems</strong> bài viết với từ khóa "<strong>@searchTerm</strong>"
                    </div>

                    <div class="row">
                        @foreach (var baiViet in Model)
                        {
                            <div class="col-md-6 mb-4">
                                <div class="card h-100 shadow-sm">
                                    @if (!string.IsNullOrEmpty(baiViet.UrlanhBia))
                                    {
                                        <img src="@baiViet.UrlanhBia" class="card-img-top" alt="@baiViet.TieuDe" 
                                             style="height: 200px; object-fit: cover;">
                                    }
                                    else
                                    {
                                        <div class="card-img-top bg-light d-flex align-items-center justify-content-center" 
                                             style="height: 200px;">
                                            <i class="fas fa-image text-muted fa-3x"></i>
                                        </div>
                                    }
                                    
                                    <div class="card-body d-flex flex-column">
                                        <h5 class="card-title">
                                            <a href="/BaiViet/@baiViet.Slug" 
                                               class="text-decoration-none text-dark">@baiViet.TieuDe</a>
                                        </h5>
                                        
                                        <p class="card-text text-muted flex-grow-1">
                                            @if (!string.IsNullOrEmpty(baiViet.TomTat))
                                            {
                                                @(baiViet.TomTat.Length > 120 ? baiViet.TomTat.Substring(0, 120) + "..." : baiViet.TomTat)
                                            }
                                        </p>
                                        
                                        <div class="mt-auto">
                                            <div class="d-flex justify-content-between align-items-center text-muted small mb-2">
                                                <span>
                                                    <i class="fas fa-user me-1"></i>@baiViet.IdtacGiaNavigation?.HoTen
                                                </span>
                                                <span>
                                                    <i class="fas fa-folder me-1"></i>@baiViet.IdchuDeNavigation?.TenChuDe
                                                </span>
                                            </div>
                                            
                                            <div class="d-flex justify-content-between align-items-center">
                                                <small class="text-muted">
                                                    <i class="fas fa-clock me-1"></i>
                                                    @if (baiViet.NgayXuatBan.HasValue)
                                                    {
                                                        @baiViet.NgayXuatBan.Value.ToString("dd/MM/yyyy HH:mm")
                                                    }
                                                    else
                                                    {
                                                        @baiViet.NgayTao.Value.ToString("dd/MM/yyyy HH:mm")
                                                    }
                                                </small>
                                                
                                                <div class="d-flex align-items-center">
                                                    @if (baiViet.LaTinNong == true)
                                                    {
                                                        <span class="badge bg-danger me-1">HOT</span>
                                                    }
                                                    <span class="badge bg-secondary">@baiViet.LuotXem lượt xem</span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>

                    <!-- Phân trang -->
                    @if (totalPages > 1)
                    {
                        <nav aria-label="Phân trang">
                            <ul class="pagination justify-content-center">
                                @if (hasPreviousPage)
                                {
                                    <li class="page-item">
                                        <a class="page-link" asp-controller="Search" asp-action="Index" 
                                           asp-route-q="@searchTerm" asp-route-page="@(currentPage - 1)">
                                            <i class="fas fa-chevron-left"></i> Trước
                                        </a>
                                    </li>
                                }

                                @for (int i = Math.Max(1, currentPage - 2); i <= Math.Min(totalPages, currentPage + 2); i++)
                                {
                                    <li class="page-item @(i == currentPage ? "active" : "")">
                                        <a class="page-link" asp-controller="Search" asp-action="Index" 
                                           asp-route-q="@searchTerm" asp-route-page="@i">@i</a>
                                    </li>
                                }

                                @if (hasNextPage)
                                {
                                    <li class="page-item">
                                        <a class="page-link" asp-controller="Search" asp-action="Index" 
                                           asp-route-q="@searchTerm" asp-route-page="@(currentPage + 1)">
                                            Sau <i class="fas fa-chevron-right"></i>
                                        </a>
                                    </li>
                                }
                            </ul>
                        </nav>
                    }
                }
                else
                {
                    <div class="text-center py-5">
                        <i class="fas fa-search fa-4x text-muted mb-3"></i>
                        <h4 class="text-muted">Không tìm thấy kết quả nào</h4>
                        <p class="text-muted">Không có bài viết nào phù hợp với từ khóa "<strong>@searchTerm</strong>"</p>
                        <div class="mt-3">
                            <p class="text-muted">Gợi ý:</p>
                            <ul class="list-unstyled text-muted">
                                <li>• Kiểm tra lại chính tả</li>
                                <li>• Thử từ khóa khác</li>
                                <li>• Sử dụng từ khóa ngắn gọn hơn</li>
                                <li>• Thử từ khóa tổng quát hơn</li>
                            </ul>
                        </div>
                    </div>
                }
            }
             else
             {
                 <div class="text-center py-5">
                     <i class="fas fa-search fa-4x text-muted mb-3"></i>
                     <h4 class="text-muted">Tìm kiếm tin tức</h4>
                     <p class="text-muted">Sử dụng thanh tìm kiếm ở header để tìm bài viết bạn quan tâm</p>
                     <div class="mt-4">
                         <a asp-controller="Home" asp-action="Index" class="btn btn-primary">
                             <i class="fas fa-home me-1"></i>Về trang chủ
                         </a>
                     </div>
                 </div>
             }
        </div>

        <!-- Sidebar -->
        <div class="col-lg-4">
            <!-- Chủ đề phổ biến -->
            <div class="card mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="fas fa-list me-2"></i>Chủ đề phổ biến</h5>
                </div>
                <div class="card-body">
                    @if (chuDes != null && chuDes.Any())
                    {
                        <ul class="list-unstyled mb-0">
                            @foreach (var chuDe in chuDes)
                            {
                                <li class="mb-2">
                                    <a href="/ChuDe/@chuDe.Slug" 
                                       class="text-decoration-none d-flex justify-content-between align-items-center">
                                        <span>@chuDe.TenChuDe</span>
                                        <i class="fas fa-chevron-right text-muted"></i>
                                    </a>
                                </li>
                            }
                        </ul>
                    }
                </div>
            </div>

            <!-- Bài viết mới nhất -->
            <div class="card mb-4">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0"><i class="fas fa-clock me-2"></i>Bài viết mới nhất</h5>
                </div>
                <div class="card-body">
                    @if (baiVietMoiNhat != null && baiVietMoiNhat.Any())
                    {
                        @foreach (var baiViet in baiVietMoiNhat)
                        {
                            <div class="d-flex mb-3">
                                @if (!string.IsNullOrEmpty(baiViet.UrlanhBia))
                                {
                                    <img src="@baiViet.UrlanhBia" class="rounded me-3" 
                                         style="width: 60px; height: 60px; object-fit: cover;" alt="@baiViet.TieuDe">
                                }
                                else
                                {
                                    <div class="bg-light rounded me-3 d-flex align-items-center justify-content-center" 
                                         style="width: 60px; height: 60px;">
                                        <i class="fas fa-image text-muted"></i>
                                    </div>
                                }
                                <div class="flex-grow-1">
                                    <h6 class="mb-1">
                                        <a href="/BaiViet/@baiViet.Slug" 
                                           class="text-decoration-none text-dark">
                                            @(baiViet.TieuDe.Length > 50 ? baiViet.TieuDe.Substring(0, 50) + "..." : baiViet.TieuDe)
                                        </a>
                                    </h6>
                                    <small class="text-muted">
                                        <i class="fas fa-clock me-1"></i>
                                        @if (baiViet.NgayXuatBan.HasValue)
                                        {
                                            @baiViet.NgayXuatBan.Value.ToString("dd/MM/yyyy")
                                        }
                                        else
                                        {
                                            @baiViet.NgayTao.Value.ToString("dd/MM/yyyy")
                                        }
                                    </small>
                                </div>
                            </div>
                        }
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Auto focus vào ô tìm kiếm
        document.addEventListener('DOMContentLoaded', function() {
            const searchInput = document.querySelector('input[name="q"]');
            if (searchInput && !searchInput.value) {
                searchInput.focus();
            }
        });
    </script>
}
